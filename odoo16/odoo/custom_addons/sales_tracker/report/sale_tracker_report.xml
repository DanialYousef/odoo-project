<odoo>
    <record id="sale_tracker_report" model="ir.actions.report">
        <field name="name">Bonus Record Report</field>
        <field name="model">sale.bonus.record</field>
        <field name="report_type">qweb-pdf</field>
        <field name="binding_model_id" ref="model_sale_bonus_record"/>
        <field name="binding_type">report</field>
        <field name="report_name">sales_tracker.bonus_report_template</field>
    </record>

    <template id="bonus_report_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-foreach="docs" t-as="rec">
                    <div class="report-container">
                        <h1 class="report-title">Sale Bonus Detail</h1>

                        <h2 class="section-title">Personal Information</h2>
                        <table class="info-table">
                            <tbody>
                                <tr>
                                    <td class="label">Plan:</td>
                                    <td><t t-esc="rec.plan_id.name"/></td>
                                    <td class="label">Partner:</td>
                                    <td><t t-esc="rec.partner_id.name"/></td>
                                </tr>
                            </tbody>
                        </table>

                        <h2 class="section-title">Bonus Information</h2>
                        <table class="info-table">
                            <tbody>
                                <tr>
                                    <td class="label">Total Sales:</td>
                                    <td><t t-esc="rec.total_sales"/></td>
                                    <td class="label">Calculated Bonus:</td>
                                    <td><t t-esc="rec.calculated_bonus"/></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>

        <style>
            .report-container {
                font-family: Helvetica, Arial, sans-serif;
                color: #333;
                margin: 20px 0;
                padding: 10px 0;
            }

            .report-title {
                font-size: 22px;
                font-weight: bold;
                color: #003366;
                border-bottom: 2px solid #ccc;
                padding-bottom: 8px;
                margin-bottom: 15px;
            }

            .section-title {
                font-size: 16px;
                font-weight: bold;
                color: #444;
                margin-top: 20px;
                margin-bottom: 8px;
                border-bottom: 1px solid #ddd;
                padding-bottom: 4px;
            }

            .info-table {
                width: 100%;
                border-collapse: collapse;
                margin-bottom: 15px;
            }

            .info-table td {
                padding: 6px 10px;
                border: 1px solid #ddd;
                vertical-align: top;
            }

            .info-table td.label {
                font-weight: bold;
                width: 25%;
                background-color: #f9f9f9;
            }

            .info-table td.value {
                width: 25%;
            }
        </style>
    </template>
</odoo>
