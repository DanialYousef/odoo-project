<odoo>
    <record id="change_partner_wizard_view_form" model="ir.ui.view">
        <field name="name">change.partner.wizard.form</field>
        <field name="model">change.users.wizard</field>
        <field name="arch" type="xml">
            <form string="Change Partner">
                <sheet>
                    <field name="todo_ids" invisible="1"/>
                    <field name="new_res_partner"/>
                </sheet>
                <footer>
                    <button string="Confirm" type="object" name="action_confirm_wizard" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_change_partner_wizard" model="ir.actions.act_window">
        <field name="name">Change Partner</field>
        <field name="res_model">change.users.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>