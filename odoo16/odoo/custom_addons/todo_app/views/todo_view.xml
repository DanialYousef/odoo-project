<odoo>
    <record id="todo_view_tree" model="ir.ui.view">
        <field name="name">todo tree</field>
        <field name="model">todo</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
                <field name="state"/>
                <field name="date"/>
                <field name="total_hour" />
            </tree>
        </field>

    </record>
    <record id="todo_view_view" model="ir.ui.view">
        <field name="name">todo view</field>
        <field name="model">todo</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <header>
                        <button name="action_new" type="object" class="btn-primary" string="Set To New"/>
                        <button name="action_in_progress" type="object" class="btn-secondary" string="Set To Progress"/>
                        <button name="action_completed" type="object" class="btn-success" string="Set To Complete"/>
                        <field name="state" widget="statusbar" options="{'clickable' : 1}"/>
                    </header>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="total_hour" />
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="res_partner"/>
                        </group>
                    </group>
                     <notebook>
                         <page string="TimeLines">
                             <field name="lines_ids">
                                 <tree editable="bottom">
                                     <field name="description"/>
                                    <field name="hours"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>

                </div>
            </form>
        </field>

    </record>
    <record id="todo_tasks_closed" model="ir.actions.server">
        <field name="name">Todo Closed</field>
        <field name="model_id" ref="model_todo"/>
        <field name="binding_model_id" ref="model_todo"/>
        <field name="state">code</field>
        <field name="code">
            action = records.action_closed()
        </field>

    </record>
    <record id="todo_action" model="ir.actions.act_window">
        <field name="name"> todo action</field>
        <field name="res_model">todo</field>
    </record>
    <menuitem
            id="todo_menu_item"
            name="Todo"
            parent="tasks_menu"
            action="todo_action"
    />
</odoo>