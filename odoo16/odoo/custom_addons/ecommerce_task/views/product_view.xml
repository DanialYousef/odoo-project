<odoo>
    <record id="product_template_form_inherit_dynamic_qty" model="ir.ui.view">
        <field name="name">product.template.view.form.inherit.dynamic.qty</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                  <page string="Variant Quantities">
                         <field name="product_variant_ids" nolabel="1">
                             <tree editable="false">
                                 <field name="display_name"/>
                                 <field name="attribute_value_ids"/>
                                 <field name="qty_available"/>
                             </tree>
                         </field>
                  </page>
            </xpath>
            <field name="invoice_policy" position="after">
                <field name="vendor_id"/>
            </field>

        </field>
    </record>
    <record id="product_template_kanban_inherit_variant_qty" model="ir.ui.view">
        <field name="name">product.template.kanban.inherit.variant.qty</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_kanban_view"/>
        <field name="arch" type="xml">
            <xpath expr="//kanban" position="inside">
                <field name="variant_qty_text"/>
            </xpath>
        <!-- داخل الكارد، تحت الاسم مثلاً -->
            <xpath expr="//div[@name='product_lst_price']" position="inside">
                <div class="o_variant_qty_text" style="margin-top:4px; white-space:pre-line; font-size:12px;">
                   <field name="variant_qty_text"/>
                </div>
            </xpath>
        </field>
    </record>

</odoo>