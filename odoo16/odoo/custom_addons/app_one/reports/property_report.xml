<odoo>
    <record id="property_report" model="ir.actions.report">
        <field name="name">Property report</field>
        <field name="model">property</field>
        <field name="report_type">qweb-html</field>
        <field name="binding_model_id" ref="model_property"/>
        <field name="binding_type">report</field>
        <field name="report_name">app_one.property_report_template</field>
    </record>

    <template id="property_report_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                 <t t-foreach="docs" t-as="rec">
                     <div>
                         <h1 class="report-title">Property name</h1>
                         <table class="general-info">
                             <thead>
                                 <tr>
                                     <th colspan="4" class="section-title">General Information</th>
                                 </tr>
                             </thead>
                             <tbody>
                                 <tr>
                                     <td class="label">Name : </td>
                                     <td class="value"><t t-esc="rec.name"/></td>
                                     <td class="label">Post Code :</td>
                                     <td class="value"><t t-esc="rec.postcode"/></td>
                                 </tr>
                             </tbody>
                             <thead>
                                 <tr>
                                     <th colspan="4" class="section-title">Additional Information</th>
                                 </tr>
                             </thead>
                             <tbody>
                                 <tr>
                                     <td class="label">Owner : </td>
                                     <td class="value"><t t-esc="rec.owner_id.name"/></td>
                                     <td class="label">Phone :</td>
                                     <td class="value"><t t-esc="rec.owner_phone"/></td>
                                 </tr>
                             </tbody>
                         </table >
                         <table class="general-info">
                             <thead>
                                   <tr>
                                     <th colspan="4" class="section-title">Bedroom Information</th>
                                   </tr>
                             </thead>
                             <tbody>
                                 <t t-foreach="rec.line_ids" t-as="line">
                                     <tr>
                                         <td >Description : </td>
                                         <td>
                                             <t t-esc="line.description"/>
                                         </td>
                                         <td >Area :</td>
                                         <td>
                                             <t t-esc="line.area"/>
                                         </td>
                                     </tr>
                                 </t>

                             </tbody>


                         </table>
                     </div>
                 </t>
            </t>
        </t>

        <style>
            .report-container {
                font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
                color: #333;
                margin: 20px;
                padding: 20px;
                border: 1px solid #ddd;
                border-radius: 5px;
            }

            .report-title {
                font-size: 24px;
                font-weight: bold;
                color: #007bff;
                margin-bottom: 20px;
                padding-bottom: 10px;
                border-bottom: 2px solid #eee;
            }

            .general-info {
                width: 100%;
                border-collapse: collapse;
                margin-bottom: 20px;
            }

            .general-info thead th {
                background-color: #f8f9fa;
                color: #495057;
                padding: 10px;
                text-align: left;
                border-bottom: 2px solid #eee;
            }

            .general-info tbody td {
                padding: 8px;
                border-bottom: 1px solid #f2f2f2;
            }

            .general-info tbody td.label {
                font-weight: bold;
                width: 20%;
            }

            .general-info tbody td.value {
                width: 30%;
            }

            .section-title {
                font-weight: bold;
                font-size: 18px;
                padding-bottom: 5px;
                border-bottom: 1px solid #ddd;
                margin-bottom: 10px;
            }
        </style>
    </template>
</odoo>