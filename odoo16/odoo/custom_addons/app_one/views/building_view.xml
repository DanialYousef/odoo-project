<odoo>
    <record id="building_view_tree" model="ir.ui.view">
        <field name="name">building tree</field>
        <field name="model">building</field>
        <field name="arch" type="xml">
            <tree class="header_custom" multi_edit="1" create="1" edit="1" delete="1">
                <field name="no"/>
                <field name="code"/>
                <field name="description"/>
                <field name="name"/>
                <field name="active"/>
            </tree>
        </field>
    </record>
        <record id="building_view_view" model="ir.ui.view">
        <field name="name">building view</field>
        <field name="model">building</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="on_title">
                        <label for="no"/>
                        <h1>
                            <field name="no"/>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Additional fields 1">
                            <field name="code"/>
                            <field name="active"/>

                        </group>
                        <group string="Additional fields 2">
                            <field name="description"/>
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>


  </record>
     <record id="building_view_search" model="ir.ui.view">
        <field name="name">building search</field>
        <field name="model">building</field>
        <field name="arch" type="xml">
            <search>
                <field name="description"/>
                <field name="code"/>

            </search>
        </field>


    </record>
    <record id="building_action" model="ir.actions.act_window">
        <field name="name">building action</field>
        <field name="res_model">building</field>
    </record>
    <menuitem
            id="building_menu_item"
            name="Building"
            parent="properties_menu"
            action="building_action"
    />
</odoo>