<odoo>
    <record id="property_view_tree" model="ir.ui.view">
        <field name="name">property tree</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <tree class="header_custom" decoration-danger="(is_late)">
                <header>
                    <button name="generate_excel_reports" type="object" class="btn-primary" string="Excel Report"/>
                </header>
                <field name="name"/>
                <field name="owner_id"/>
                <field name="tag_ids"/>
                <field name="state"/>
                <field name="is_late" invisible="1"/>
                <field name="description" optional="1"/>
                <field name="postcode"/>
                <field name="data_availability"/>
                <field name="data_selling_expected"/>
                <field name="expected_price" optional="1"/>
                <field name="selling_price" optional="1"/>
                <field name="bedrooms"/>
                <field name="living_area" optional="1"/>
                <field name="facades" optional="1"/>
                <field name="garage" optional="1" />
                <field name="garden"/>
                <field name="garden_area"/>
                <field name="garden_orientation"/>
            </tree>
        </field>


    </record>
        <record id="property_view_view" model="ir.ui.view">
        <field name="name">property view</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button name="action_open_related_owner" type="object" icon="fa-user" string="Owner" attrs="{'invisible' : [('owner_id','=',False)]}"/>
                    </div>
                    <field name="active" invisible="1"/>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" attrs="{'invisible' : [('active','=',True)]}"/>
                    <header>
                        <field name="state" invisible="1"/>
                        <button name="action_search" type="object" class="btn-primary" string="Action"/>
                        <button name="action_test_api" type="object" class="btn-primary" string="Action Test Api"/>
                        <button name="actions_draft" type="object" class="btn-primary" string="Set To Draft" attrs="{'invisible' :[('state','=' ,'draft' )]}" />
                        <button name="actions_pending" type="object" class="btn-secondary" string="Set To Pending"/>
                        <button name="actions_sold" type="object" class="btn-success" string="Set To Sold" />
                        <button name="action_closed" type="object" class="btn-success" string="Set To Closed" />
                        <field name="state" widget="statusbar"/>
                    </header>
                    <div class="on_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" />
                        </h1>
                        <label for="ref"/>
                        <h3>
                            <field name="ref"/>
                        </h3>
                    </div>
                    <group>
                        <group>
                            <field name="postcode"/>
                            <field name="owner_id"/>
                            <field name="active"/>
                            <field name="owner_address"/>
                            <field name="owner_phone"/>
                            <field name="data_availability"/>
                            <field name="data_selling_expected"/>
                            <field name="is_late" />
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                            <field name="diff"/>
                            <field name="bedrooms"/>
                        </group>
                        <group>
                            <field name="living_area"/>
                            <field name="facades"/>
                            <field name="garage"/>
                            <field name="garden"/>
                            <field name="garden_area"/>
                            <field name="tag_ids" widget="many2many_tag"/>

                        </group>
                    </group>
                    <notebook>
                        <page string="bedroom">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="area"/>
                                    <field name="description"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>


    </record>
     <record id="property_view_search" model="ir.ui.view">
        <field name="name">property search</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="postcode" />

                <filter name="is_garden" string="with_garden" domain="[('garden','=','True')]"/>
                <filter name="is_garage" string="with_garage" domain="[('garage','=','True')]"/>
                <filter name="group garage" string="group_by_garage" context="{'group_by' : 'garage'}"/>
            </search>
        </field>


    </record>
    <record id="property_action" model="ir.actions.act_window">
        <field name="name">property action</field>
        <field name="res_model">property</field>
    </record>

    <record id="property_closed_server_action" model="ir.actions.server">
        <field name="name" >Property action server</field>
        <field name="model_id" ref="model_property"/>
        <field name="binding_model_id" ref="model_property"/>
        <field name="state" >code</field>
        <field name="code">
            action = records.action_closed()
        </field>
    </record>
      <record id="property_change_closed_server_action" model="ir.actions.server">
        <field name="name" >Change action server</field>
        <field name="model_id" ref="model_property"/>
        <field name="binding_model_id" ref="model_property"/>
        <field name="state" >code</field>
        <field name="code">
            action = records.action_open_change_state_wizard()
        </field>
    </record>
    <record id="check_selling_date_crone" model="ir.cron">
        <field name="name">Property : check selling date</field>
        <field name="model_id" ref="model_property"/>
        <field name="state">code</field>
        <field name="code">
            model.action_selling_expected()
        </field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active" >True</field>
    </record>
    <menuitem
            id="property_menu_item"
            name="Properties"
            parent="properties_menu"
            action="property_action"
    />

    <record id="list_view_action" model="ir.actions.client">
        <field name="name">Property List View</field>
        <field name="tag">app_one.action_list_view</field>
    </record>
    <menuitem
            id="property_list_view_item"
            name="Properties Owl"
            parent="properties_menu"
            action="list_view_action"
    />

</odoo>