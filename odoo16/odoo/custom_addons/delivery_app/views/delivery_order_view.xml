<odoo>
    <record id="order_view_tree" model="ir.ui.view">
        <field name="name">Order tree</field>
        <field name="model">delivery.order</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="order_date"/>
                <field name="customer_id"/>
                <field name="delivery_person_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record id="order_view_form" model="ir.ui.view">
        <field name="name">Order form</field>
        <field name="model">delivery.order</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <header>
                        <button name="action_pending" type="object" class="btn-primary" string="Pending" />
                        <button name="action_accepted" type="object" class="btn-secondary" string="Accepted" />
                        <button name="action_out_for_delivery" type="object" class="btn-primary" string="Out_For" />
                        <button name="action_delivered" type="object" class="btn-success" string="Delivered" />
                        <button name="action_canceled" type="object" class="btn-danger" string="Canceled" />
                        <field name="state" widget="statusbar"/>
                    </header>
                    <div class="on_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Info">
                            <field name="order_date"/>
                            <field name="customer_id"/>
                            <field name="delivery_person_id"/>
                        </group>
                        <group string="Address">
                        </group>
                    </group>
                    <notebook>
                        <page string="Order Lines">
                            <field name="order_lines">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="description"/>
                                    <field name="type_of_food"/>
                                    <field name="making_time"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="order_action" model="ir.actions.act_window">
        <field name="name">Order Action</field>
        <field name="res_model">delivery.order</field>
    </record>
    <menuitem
            id="order_view"
            name="Orders"
            parent="order_menu"
            action="order_action"
    />
</odoo>