<odoo>
    <record id="restaurant_view_tree" model="ir.ui.view">
        <field name="name">Restaurant tree</field>
        <field name="model">delivery.restaurant</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="restaurant_description"/>
                <field name="restaurant_city"/>
            </tree>
        </field>
    </record>
    <record id="restaurant_view_form" model="ir.ui.view">
        <field name="name">Restaurant form</field>
        <field name="model">delivery.restaurant</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="on_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Address Info">
                            <field name="restaurant_description"/>
                            <field name="restaurant_address"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="delivery_restaurant_cation" model="ir.actions.act_window">
        <field name="name">Delivery Restaurant Action</field>
        <field name="res_model">delivery.restaurant</field>
    </record>
    <menuitem
            id="restaurant_view"
            name="Restaurant"
            parent="restaurant_menu"
            action="delivery_restaurant_cation"
    />
</odoo>